<h1>Restaurants</h1>

<ul>
  <!-- iterate over the @restaurants array -->
  <!-- for each restaurant build a <li></li> containing the restaurant name and a link to the show page -->

  <% @restaurants.each do |rest| %>
    <li> <a href=<%="/restaurants/#{rest.id}"%> ><%= rest.name %></a> </li>
  <% end %>
</ul>

<a href="/restaurants/new">New restaurant</a>
